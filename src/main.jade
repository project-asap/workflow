append stylesheet

  link(href='css/main.css', rel='stylesheet', media='screen')
append content
  nav.navbar.navbar-inverse.navbar-fixed-top
    div.container-fluid
      div.navbar-header
        a.navbar-brand(href="#")
      div.navbar-collapse.collapse
        ul.nav.navbar-right.navbar-nav
          li
            a#analyse(href="#") Analyse
          li
            a#optimise(href="#") Optimise
          li
            a#execute(href="#") Execute
        ul.nav.navbar-right.navbar-nav
          li
            a#dashboard(href="#") Dashboard
          li
            a#newwl(href="#") New workflow
          li
            a#loadwl(href="#") Load workflow
            input#uploadfile(type='file', style='display: none;')
          li
            a#savewl(href="#") Save workflow
          li
            a#uploadwl(href="#") Upload workflow
  div.container-fluid
    div.row
      div.sidebar.col-md-3
        ul.nav.nav-sidebar
          li
            a#adddatastore(href="#") Add datastore
          li
            a#addnode(href="#") Add node
          li
            a#addlink(href="#") Add links
        div#node.hide
          ul.nav.nav-sidebar
            li#nodeName
              label(for="nodeTitle") Node title:
              input#nodeTitle
            li
              a#removeNode(href="#") Remove Node
          div#tasksBoard
          ul.nav.nav-sidebar
            li
              a#addTask(href="#") Add task
          ul#libraryOperators.nav.nav-sidebar.hide
            li
              a#createNewTask(href="#") Create new
          div#taskName.hide
            label(for="taskTitle") Task title:
            input#taskTitle
          div#metadata.hide
            div
              label(for="metadata") Meta Data:
            div#metadataTree.hide
            div
              textarea#metadataEditor
      div.main.col-md-9.col-md-offset-3
        div#wlBoard
